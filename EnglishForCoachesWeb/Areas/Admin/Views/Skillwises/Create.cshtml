@model EnglishForCoachesWeb.Areas.Admin.Models.SkillwiseCreateViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page Header -->
<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-12">
            <h1 class="page-heading">
                <a href="@Url.Action("Index", "Subtemas", new {id = @Model.bloque.SubTema.TemaId })">
                    @Model.bloque.SubTema.Tema.Descripcion
                </a>
                / <a href="@Url.Action("Index", "Bloques", new {id = @Model.bloque.SubTema.SubTemaId })">
                    @Model.bloque.SubTema.Descripcion
                </a> /  @Model.bloque.Descripcion
            </h1>
            <h3>
                Nuevo ejercicio
            </h3>
        </div>
    </div>
</div>
<!-- END Page Header -->
<!-- Page Content -->
<div class="content content-narrow">

    @using (Html.BeginForm("Create", "Skillwises", FormMethod.Post, new { @class = "form-horizontal push-10-t", @id = "formCrear" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @Html.HiddenFor(model => model.Skillwise.TipoEjercicioId)
        @Html.HiddenFor(model => model.Skillwise.SubTemaId)
        @Html.HiddenFor(model => model.Skillwise.AreaId)
        @Html.HiddenFor(model => model.Skillwise.BloqueId)

        <div class="block">
            <div class="block-content block-content-full">



                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="form-material">
                            @Html.LabelFor(model => model.Skillwise.Enunciado, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Skillwise.Enunciado, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Skillwise.Enunciado, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-6">
                        <div class="form-material">
                            @Html.LabelFor(model => model.Skillwise.Respuesta1, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Skillwise.Respuesta1, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Skillwise.Respuesta1, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-material">
                            @Html.LabelFor(model => model.Skillwise.Explicacion1, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Skillwise.Explicacion1, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Skillwise.Explicacion1, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-6">
                        <div class="form-material">
                            @Html.LabelFor(model => model.Skillwise.Respuesta2, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Skillwise.Respuesta2, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Skillwise.Respuesta2, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-material">
                            @Html.LabelFor(model => model.Skillwise.Explicacion2, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Skillwise.Explicacion2, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Skillwise.Explicacion2, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-6">
                        <div class="form-material">
                            @Html.LabelFor(model => model.Skillwise.Respuesta3, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Skillwise.Respuesta3, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Skillwise.Respuesta3, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-material">
                            @Html.LabelFor(model => model.Skillwise.Explicacion3, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Skillwise.Explicacion3, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Skillwise.Explicacion3, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-6">
                        <div class="form-material">
                            @Html.LabelFor(model => model.Skillwise.Respuesta4, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Skillwise.Respuesta4, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Skillwise.Respuesta4, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-material">
                            @Html.LabelFor(model => model.Skillwise.Explicacion4, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Skillwise.Explicacion4, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Skillwise.Explicacion4, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-3">
                        <div class="form-material">
                            @Html.LabelFor(model => model.Skillwise.RespuestaCorrecta, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Skillwise.RespuestaCorrecta, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Skillwise.RespuestaCorrecta, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="block-content block-content-full">
            <div class="form-group">
                <div class="col-sm-12 text-right">
                    <input type="button" onclick="comprobacionFormulario();" value="Guardar" name="command" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <h3 >
        Listado ejercicios
    </h3>

    <div class="block">
        <div class="block-content">
            <table class="table table-hover table-borderless">
                <thead>
                    <tr>
                        <th>
                            Descripción
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.bloque.Skillwises)
                    {
                        <tr>
                            <td>
                                @item.Descripcion
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <button class="btn btn-xs btn-default" type="button" data-toggle="tooltip" title="" data-original-title="Editar contenido"
                                            onclick="location.href='@Url.Action("Edit", Model.bloque.TipoEjercicio.Controlador, new {Area = "Admin", id= item.Id })';">
                                        <i class="fa fa-pencil"></i>
                                    </button>


                                    <button class="btn btn-xs btn-default" type="button" data-toggle="tooltip" title="" data-original-title="Eliminar contenido"
                                            onclick="if(confirm('¿Está seguro que desea borrar el contenido?')) location.href='@Url.Action("Delete", Model.bloque.TipoEjercicio.Controlador, new {Area = "Admin" , id=item.Id })';">
                                        <i class="fa fa-times"></i>
                                    </button>


                                </div>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

<!-- END Page Content -->


@section Scripts {

    <!-- Page JS Code -->
    <script>

        function comprobacionFormulario() {
            var enviarForm = 0; //Enviar

            var r3 = $("#Skillwise_Respuesta3").val();
            var e3 = $("#Skillwise_Explicacion3").val();
            
            var r4 =$("#Skillwise_Respuesta4").val();
            var e4 = $("#Skillwise_Explicacion4").val();
           

            var rc = $("#Skillwise_RespuestaCorrecta").val();
            if (rc == 3) {
                if (r3 == '' && e3 == '') {
                    alert("No puedes seleccionar esta respuesta. Esta vacia.");
                    enviarForm = 1; //No enviar
                }
            }
            if (rc == 4) {
                if (r4 == '' && e4 == '') {
                    alert("No puedes seleccionar esta respuesta. Esta vacia.");
                    enviarForm = 1; //No enviar
                }
            }

            if (enviarForm == 0)
            {
                $("#formCrear").submit();
            }
        }
    </script>
}