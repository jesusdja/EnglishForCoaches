@model EnglishForCoachesWeb.Areas.Admin.Models.ErroresExamenEditViewModel


@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}<!-- Page Header -->
<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-12">
            <h1 class="page-heading">
                Ver Errores Examen
            </h1>
        </div>
    </div>
</div>
<!-- END Page Header -->
<!-- Page Content -->
<div class="content content-narrow">



    <div class="block">
        <div class="block-content block-content-full">


            <div class="block">
                <!-- Basic Info -->
                <div class="block-content text-center overflow-hidden">
                    <div class="push-30-t push animated fadeInDown">
                        <img class="img-avatar" src="~/media/upload/avatar/@(Model.Examen.AlumnoId).jpg" alt="@Model.Examen.NombreAlumno ">
                    </div>
                    <div class="push-30 animated fadeInUp">
                        <h2 class="h4 font-w600 push-5">
                            @Model.Examen.NombreAlumno 
                        </h2>
                        <h3 class="h5 text-muted">@Model.Examen.SubTema.Tema.Descripcion /@Model.Examen.SubTema.Descripcion</h3>
                    </div>
                </div>
                <!-- END Basic Info -->
                <!-- Stats -->
                <div class="block-content text-center bg-gray-lighter">
                    <div class="row items-push text-uppercase">
                        <div class="col-xs-6 col-sm-4">
                            <div class="font-w700 text-gray-darker animated fadeIn">Fallos</div>
                            <span class="h2 font-w300 text-danger animated flipInX">@Model.Examen.Fallos</span>
                        </div>
                        <div class="col-xs-6 col-sm-4">
                            <div class="font-w700 text-gray-darker animated fadeIn">Aciertos</div>
                            <span class="h2 font-w300 text-success animated flipInX">@Model.Examen.Aciertos</span>
                        </div>
                        <div class="col-xs-6 col-sm-4">
                            <div class="font-w700 text-gray-darker animated fadeIn">Fecha</div>
                            <span class="h2 font-w300 animated flipInX">@Model.Examen.FechaExamen.ToShortDateString()</span>
                        </div>
                    </div>
                </div>
                <!-- END Stats -->
            </div>
                        

        </div>
        <div class="block-content">
            <table class="table table-hover table-borderless">
                <thead>
                    <tr>
                        <th>
                            Pregunta
                        </th>
                        <th>
                            Respuesta
                        </th>
                        <th>
                            Respuesta Correcta
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Examen.RespuestasIncorrectas)
                    {
                        <tr>
                            <td>
                                @if (item.PreguntaId.HasValue) {
                                    <a href="@Url.Action("Edit", item.Tipo, new { Area = "Admin", id = item.PreguntaId, examenId = item.ExamenId })">
                                        @item.Pregunta
                                    </a>
                                } else {
                                    @item.Pregunta
                                }
                            </td>
                            <td class="text-danger">
                                @item.RespuestaSeleccionada
                            </td>
                            <td class="text-success">
                                @item.RespuestaCorrecta
                            </td>

                        </tr>

                    }
                </tbody>
            </table>

        </div>

    </div>
</div>

<!-- END Page Content -->
