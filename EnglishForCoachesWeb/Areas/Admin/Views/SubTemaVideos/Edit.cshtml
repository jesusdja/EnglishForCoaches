@model EnglishForCoachesWeb.Areas.Admin.Models.SubTemaVideoEditViewModel


@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}<!-- Page Header -->
<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-12">
            <h1 class="page-heading">

                <a href="@Url.Action("Index", "Subtemas", new {id = @Model.Subtema.TemaId })">
                    @Model.Subtema.Tema.Descripcion
                </a>
                / <a href="@Url.Action("Index", "Bloques", new {id = @Model.Subtema.SubTemaId })">
                    @Model.Subtema.Descripcion
                </a> / Editar SubTemaVideo
            </h1>
        </div>
    </div>
</div>
<!-- END Page Header -->
<!-- Page Content -->
<div class="content content-narrow">

    @using (Html.BeginForm("Edit", "SubTemaVideos", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal push-10-t" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.SubTemaVideo.SubTemaVideoId)
        @Html.HiddenFor(model => model.SubTemaVideo.SubTemaId)

        <div class="block">
            <div class="block-content block-content-full">


                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="form-material">
                            @Html.LabelFor(model => model.SubTemaVideo.Titulo, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.SubTemaVideo.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SubTemaVideo.Titulo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>



                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="form-material">
                            @Html.LabelFor(model => model.SubTemaVideo.UrlVideo, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.SubTemaVideo.UrlVideo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SubTemaVideo.UrlVideo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <div class="form-group" >
                    <div class="col-sm-12">
                        <h5>
                            Clientes
                        </h5>
                        @for (var j = 0; j < Model.Clientes.Count; j++)
                        {
                            <div class="col-sm-4">
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(m => m.Clientes[j].Selected, new { id = "chk_" + j })
                                        @Html.HiddenFor(m => m.Clientes[j].Text)
                                        @Html.HiddenFor(m => m.Clientes[j].Value)
                                        <span>@Model.Clientes[j].Text</span>
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
                </div>
                <div class="block-content block-content-full">
                    <div class="form-group">
                        <div class="col-sm-12 text-right">
                            <input type="submit" value="Guardar video" name="command" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                }
            </div>
<!-- END Page Content -->
