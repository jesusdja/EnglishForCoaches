@model EnglishForCoachesWeb.Areas.Admin.Models.VideoCreateViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!-- Page Header -->
<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-12">
            <h1 class="page-heading">
                Nuevo Video
            </h1>
        </div>
    </div>
</div>
<!-- END Page Header -->
<!-- Page Content -->
<div class="content content-narrow">

    @using (Html.BeginForm("Create", "Videos", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal push-10-t" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="block">
            <div class="block-content block-content-full">



                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="form-material">
                            @Html.LabelFor(model => model.Video.Titulo, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.Video.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Video.Titulo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="form-material">
                            @Html.TextBoxFor(model => model.File, new { type = "file", accept = "video/mp4,video/x-m4v,video/*" })
                            @Html.ValidationMessageFor(model => model.File)
                            @Html.LabelFor(model => model.File, htmlAttributes: new { @class = "" })
                        </div>
                    </div>
                </div>                               

            </div>

                    </div>
                    <div class="block-content block-content-full">
                        <div class="form-group">
                            <div class="col-sm-12 text-right">
                                @* El value afecta a la acción *@
                                <input type="submit" value="Guardar Video" name="command" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
<!-- END Page Content -->
