@model EnglishForCoachesWeb.Areas.Admin.Models.GramaticaVocabularioIndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!-- Page Header -->
<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-12">
            <h1 class="page-heading">
                <a href="@Url.Action("Index", "Subtemas", new {id = @Model.Gramatica.SubTema.TemaId })">
                    @Model.Gramatica.SubTema.Tema.Descripcion
                </a>
                / <a href="@Url.Action("Index", "Bloques", new {id = @Model.Gramatica.SubTemaId })">
                    @Model.Gramatica.SubTema.Descripcion
                </a> /    
                Vocabulario de @Model.Gramatica.Titulo
            </h1>
        </div>
    </div>
</div>
<!-- END Page Header -->
<!-- Page Content -->
<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="block">
                <div class="block-header">
                    <ul class="block-options">
                        <li>
                            <button type="button" onclick="location.href='@Url.Action("Create", "GramaticaVocabularios", new { Area = "Admin",id=Model.Gramatica.GramaticaId})';"><i class="si si-note"></i> Añadir vocabulario</button>
                        </li>
                    </ul>
                </div>


                <div class="block-content">
                    <table class="table table-hover table-borderless">
                        <thead>
                            <tr>
                                <th>

                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.listadoGramaticaVocabularios[0].Palabra_es)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.listadoGramaticaVocabularios[0].Palabra_en)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.listadoGramaticaVocabularios)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.FicheroAudio))
                                        {
                                        <i class="fa fa-volume-up"></i>
                                        }
                                    </td>

                                    <td>
                                            @item.Palabra_es 
                                       
                                    </td>
                                    <td>
                                       @item.Palabra_en

                                    </td>
   
                                    <td class="text-center">
                                        <div class="btn-group">
                                            


                                            <button onclick="if(confirm('¿Está seguro que desea quitar el vocabulario?')) location.href='@Url.Action("Delete", "GramaticaVocabularios", new {Area = "Admin" , vocabularioId=item.VocabularioId,gramaticaId=Model.Gramatica.GramaticaId})';"
                                                    class="removeItem btn btn-xs btn-default" type="button" data-toggle="tooltip" title="" data-original-title="Quitar vocabulario">
                                                <i class="fa fa-minus-square"></i>
                                            </button>

                                        </div>
                                    </td>
                                </tr>

                                            }
                        </tbody>
                    </table>
  

                </div>
            </div>
        </div>
    </div>

</div>
<!-- END Page Content -->

